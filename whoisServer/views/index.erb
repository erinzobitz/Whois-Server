<html>

<head>
	<title> Find Your Domain Name
	</title>

</head>

<script src="/javascript/jquery-1.8.2.min.js"></script>

<script src="/javascript/bootstrap.min.js"></script>
<link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">

<script type="text/javascript">

$(function(){

	$("button").click(function(){
		var name =$("input:text").val();
		$.post("http://localhost:4567/hi",
			{ domain: name },
			function(data) {
				$('#domainData').append("<tr> <td>" + data.domain + "</td> <td>" + data.state + "</td> </tr>");
				console.log(data);
			},
			"json"
			)
		$("input:text").val('');
	});

});


</script>


<style>

div {
	text-align: center;
}

h1 {
	text-align: center;
	font-size: 300%;
}

h2 {
	text-align: center;

}

th {
	font-size: 150%;
}

</style>

<body>


	<div class="hero-unit container">
		<h1>
			Find your Domain Name
		</h1>
		<h2> 
			Type in your desired domain name below to see if it's available
		</h2>
		<p><input type="text" placeholder="Type a domain name..."></p>
		<button class="btn btn-primary btn-large">Search</button>
	</div>

	<div>
		<table class="table table-striped" id="domainData">

			<thead>

				<th>Domain:</th>
				<th>State:</th>

			</thead>


		</table>
	</div>
</div>

</body>


</html>